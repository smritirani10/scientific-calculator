<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#123456"
    android:orientation="vertical"
    android:paddingLeft="5dp"

    android:paddingRight="5dp"
    tools:context=".ScientficCalculator">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txt"
            android:layout_width="match_parent"
            android:layout_height="215dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_weight="1"
            android:background="#39DCB3"
            android:gravity="bottom"
            android:hint="0"
            android:padding="20dp"
            android:textColor="#F7F7F7"
            android:textSize="30dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <Button
                android:id="@+id/varpowerbtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="#8BC34A"
                android:text="STAN"
                android:textColor="#F7F7F7"
                android:textSize="20dp"
                android:textStyle="italic" />

            <Button


                android:id="@+id/xfactorialbtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="#FA1A1717"
                android:text="x!"
                android:textColor="#F7F7F7"
                android:textSize="20dp"
                android:textStyle="bold|italic" />

            <Button

                android:id="@+id/logbtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:autoText="false"
                android:background="#FA1A1717"
                android:text="log"
                android:textColor="#F7F7F7"
                android:textSize="20dp"
                android:textStyle="italic" />

            <Button

                android:id="@+id/epowerbtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="#FA1A1717"
                android:text="@string/exponent"
                android:textColor="#F7F7F7"
                android:textSize="20dp"
                android:textStyle="italic" />

            <Button

                android:id="@+id/lnbtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="#4CAF50"
                android:text="ln"
                android:textColor="#F7F7F7"
                android:textSize="20dp"
                android:textStyle="italic" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <Button
                android:id="@+id/squarerootbtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="#FA1A1717"
                android:text="@string/square_root_symbol"
                android:textColor="#F7F7F7"
                android:textSize="24sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/istpower2nd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:layout_weight="1"

                android:background="#FA1A1717"
                android:text="^"
                android:textColor="#F7F7F7"
                android:textSize="24sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/sinbtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:layout_weight="1"

                android:background="#FA1A1717"
                android:text="sin"
                android:textColor="#F7F7F7"
                android:textSize="20dp"
                android:textStyle="italic" />

            <Button
                android:id="@+id/cosbtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:layout_weight="1"

                android:background="#FA1A1717"
                android:text="cos"
                android:textColor="#F7F7F7"
                android:textSize="20dp"
                android:textStyle="italic" />

            <Button
                android:id="@+id/tanbtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:layout_weight="1"

                android:background="#FA1A1717"
                android:text="tan"
                android:textColor="#F7F7F7"
                android:textSize="20dp"
                android:textStyle="italic" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <Button
                android:id="@+id/onedividebtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:layout_weight="1"

                android:background="#FA1A1717"
                android:text="1/x"
                android:textColor="#F7F7F7"
                android:textSize="20dp" />

            <Button
                android:id="@+id/sinhbtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:layout_weight="1"

                android:background="#FA1A1717"
                android:text="sinh"
                android:textColor="#F7F7F7"
                android:textSize="20dp"
                android:textStyle="italic" />

            <Button
                android:id="@+id/coshbtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:layout_weight="1"

                android:background="#FA1A1717"
                android:text="cosh"
                android:textColor="#F7F7F7"
                android:textSize="20dp"
                android:textStyle="italic" />

            <Button
                android:id="@+id/tanhbtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:layout_weight="1"

                android:background="#FA1A1717"
                android:text="tanh"
                android:textColor="#F7F7F7"
                android:textSize="20dp"
                android:textStyle="italic" />

            <Button
                android:id="@+id/squarebtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:layout_weight="1"


                android:background="#FA1A1717"
                android:text="@string/xsquare"

                android:textColor="#F7F7F7"
                android:textSize="17dp" />

        </LinearLayout>

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <Button

                android:id="@+id/cuberootbtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="#FA1A1717"
                android:text="@string/cube_root_symbol"
                android:textColor="#F7F7F7"
                android:textSize="24sp"
                android:textStyle="normal" />

            <Button
                android:id="@+id/tenexponent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:layout_weight="1"

                android:background="#FA1A1717"
                android:text="x10x"
                android:textColor="#F7F7F7"
                android:textSize="20dp"
                android:textStyle="normal|italic" />

            <Button
                android:id="@+id/expbtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:layout_weight="1"

                android:background="#FA1A1717"
                android:text="exp"
                android:textColor="#F7F7F7"
                android:textSize="20dp"
                android:textStyle="italic" />

            <Button
                android:id="@+id/modulousbtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:layout_weight="1"

                android:background="#FA1A1717"
                android:text="%"
                android:textColor="#F7F7F7"
                android:textSize="20dp"
                android:textStyle="normal" />

            <Button
                android:id="@+id/xcubebtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="#FA1A1717"
                android:text="@string/xcube"
                android:textColor="#F7F7F7"
                android:textSize="17dp"
                android:textStyle="normal" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <Button
                android:id="@+id/sevenbtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:layout_weight="1"

                android:background="#FA1A1717"
                android:text="7"
                android:textColor="#F7F7F7"
                android:textSize="24sp"
                android:textStyle="bold|italic" />

            <Button
                android:id="@+id/eightbtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="#FA1A1717"
                android:text="8"
                android:textColor="#F7F7F7"
                android:textSize="24sp"
                android:textStyle="bold|italic" />

            <Button
                android:id="@+id/ninebtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:layout_weight="1"

                android:background="#FA1A1717"
                android:text="9"
                android:textColor="#F7F7F7"
                android:textSize="24sp"
                android:textStyle="bold|italic" />

            <Button

                android:id="@+id/deletebtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:layout_weight="1"

                android:background="#4CAF50"
                android:text="DEL"
                android:textColor="#F7F7F7"
                android:textSize="20dp"
                android:textStyle="bold|italic" />

            <Button
                android:id="@+id/clearrbtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:layout_weight="1"

                android:background="#4CAF50"
                android:text="AC"
                android:textColor="#F7F7F7"
                android:textSize="20dp"
                android:textStyle="bold|italic" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <Button
                android:id="@+id/fourbtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:layout_weight="1"

                android:background="#FA1A1717"
                android:text="4"
                android:textColor="#F7F7F7"
                android:textSize="24sp"
                android:textStyle="bold|italic" />

            <Button
                android:id="@+id/fivebtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:layout_weight="1"

                android:background="#FA1A1717"
                android:text="5"
                android:textColor="#F7F7F7"
                android:textSize="24sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/sixbtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:layout_weight="1"

                android:background="#FA1A1717"
                android:text="6"
                android:textColor="#F7F7F7"
                android:textSize="24sp"
                android:textStyle="bold|italic" />

            <Button
                android:id="@+id/plusbtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:layout_weight="1"

                android:background="#FA1A1717"
                android:text="+"
                android:textColor="#F7F7F7"
                android:textSize="24sp"
                android:textStyle="bold|italic" />

            <Button
                android:id="@+id/minusbtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:layout_weight="1"

                android:background="#FA1A1717"
                android:text="-"
                android:textColor="#F7F7F7"
                android:textSize="24sp"
                android:textStyle="bold|italic" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <Button
                android:id="@+id/onebtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:layout_weight="1"

                android:background="#FA1A1717"
                android:text="1"
                android:textColor="#F7F7F7"
                android:textSize="24sp"
                android:textStyle="bold|italic" />

            <Button
                android:id="@+id/twobtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:layout_weight="1"

                android:background="#FA1A1717"
                android:text="2"
                android:textColor="#F7F7F7"
                android:textSize="24sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/threebtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:layout_weight="1"

                android:background="#FA1A1717"
                android:text="3"
                android:textColor="#F7F7F7"
                android:textSize="24sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/multiplybtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:layout_weight="1"

                android:background="#FA1A1717"
                android:text="x"
                android:textColor="#F7F7F7"
                android:textSize="20dp"
                android:textStyle="bold|italic" />

            <Button
                android:id="@+id/dividebtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:layout_weight="1"

                android:background="#FA1A1717"
                android:text="/"
                android:textColor="#F7F7F7"
                android:textSize="20dp"
                android:textStyle="bold|italic" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"

            android:layout_height="wrap_content"
            android:layout_weight="1">

            <Button
                android:id="@+id/zerobtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:layout_weight="1"

                android:background="@color/colorAccent"
                android:text="0"
                android:textColor="#F7F7F7"
                android:textSize="24sp"
                android:textStyle="bold|italic" />

            <Button
                android:id="@+id/pointbtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:layout_weight="1"

                android:background="#FA1A1717"
                android:text="."
                android:textColor="#F7F7F7"
                android:textSize="24sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/piebtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"

                android:layout_weight="1"


                android:background="#FA1A1717"
                android:text="@string/pie_symbol"
                android:textColor="#F7F7F7"
                android:textSize="20dp"
                android:textStyle="bold" />

            <Button

                android:id="@+id/ansbtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:layout_weight="1"

                android:background="#FA1A1717"
                android:text="ANS"
                android:textColor="#F7F7F7"
                android:textSize="20dp"
                android:textStyle="bold|italic" />

            <Button
                android:id="@+id/equalbtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:layout_weight="1"

                android:background="#4CAF50"
                android:text="="
                android:textColor="#F7F7F7"
                android:textSize="20dp"
                android:textStyle="bold" />

        </LinearLayout>
    </LinearLayout>
</LinearLayout>